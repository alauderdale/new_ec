<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= data.page.title || "Eternal Contrast"
    = stylesheet_link_tag "bootstrap", "font-awesome" ,"style","pace"
    %script{:src => "http://code.jquery.com/jquery-latest.min.js", :type => "text/javascript"}
    = javascript_include_tag "bootstrap","pace", "scripts"
    %link{href: "images/favicon.ico", rel: "shortcut icon"}/
  %body{:class => page_classes}
    %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
      .container
        %a.navbar-brand.logo{href: "index.html"}
        .nav-menu.pull-right
          %ul.nav.navbar-nav.navbar-right
            %li
              %a#menu-button{:href=>"javaScript:void(0);"}
                %i.icon-reorder.primary-text-color
                %span.menu-title
                  MENU
    = partial "layouts/main_menu"
    .main-contents
      = yield
    = partial "layouts/footer"