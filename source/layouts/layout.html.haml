<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= data.page.title || "Eternal Contrast"
    = stylesheet_link_tag "bootstrap", "font-awesome" ,"style"
    %script{:src => "http://code.jquery.com/jquery-latest.min.js", :type => "text/javascript"}
    = javascript_include_tag  "bootstrap", "scripts"
  %body{:class => page_classes}
    %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
      .container
        %a.navbar-brand.logo{href: "#"}
        .nav-menu.pull-right
          %ul.nav.navbar-nav.navbar-right
            %li
              %a#menu-button{:href=>"javaScript:void(0);"}
                %i.icon-reorder
    = partial "layouts/main_menu"
    .main-contents
      = yield